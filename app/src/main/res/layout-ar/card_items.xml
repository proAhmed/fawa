<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/air_condition"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/imgCard"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" السعر  ۱۲۰ دينار "
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:textSize="22sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imgAdd"
            android:src="@drawable/add_icon"
            />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="20dp"
            android:id="@+id/imgShare"
            android:src="@drawable/add_icon"
            />
    </LinearLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:background="#000"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="24sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:text="الخصائص:"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginRight="20dp"

        android:layout_marginTop="15dp"
        android:text="بارد او سخن وبارد"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"

        android:text="كمبروسير نوع ريترو"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"

        android:text="امكانية التحكم من بعد"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"

        android:text="  220V فولت"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"

        android:text="نوع الفلتر"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"

        android:text="مضاد للبكتريا"/>
</LinearLayout>
    </android.support.v7.widget.CardView>
