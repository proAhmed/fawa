<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
 android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:src="@drawable/air_condition"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:id="@+id/imgCard"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="17sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"

        android:text="Specifications:"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:id="@+id/tvCold"
        android:layout_marginTop="5dp"
        android:text="Cold or H/C Cold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:id="@+id/tvCompress"

        android:text="Compressor Type Rotary"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:id="@+id/tvRemote"

        android:text="Remote Control Yes"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:id="@+id/tvVoltage"

        android:text="Voltage 220V"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:id="@+id/tvFilter"

        android:text="Filter (typ)"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:id="@+id/tvBacterial"

        android:text="Anti Bacterial"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quantity"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="65dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#007AAD"
             android:layout_marginLeft="5dp"
            >
<ImageView
    android:id="@+id/imgLeft"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="6dp"
    android:layout_marginLeft="6dp"
    android:src="@drawable/left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="16sp"
                android:textColor="#fff"
                android:id="@+id/tvQuantity"
                android:layout_margin="6dp"/>
            <ImageView
                android:id="@+id/imgRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/right"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_delete"
        android:text="@string/delete"
        android:id="@+id/buttonDelete"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp"
        android:textSize="20sp"
        android:textColor="#fff"/>
</LinearLayout>


    </android.support.v7.widget.CardView>
